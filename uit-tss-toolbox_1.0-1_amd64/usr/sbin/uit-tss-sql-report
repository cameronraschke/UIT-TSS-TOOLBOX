#!/bin/bash
DATE=$(date --iso)

mysql --user="laptops" --password="UHouston!" --database="laptops" --html --execute="\
    SELECT tagnumber,date,etheraddress,action,mode,cloneimg,timestotal,avgtimeall \
    FROM laptopstats;" > /mnt/uit-tss-laptop-job-report-$(date --iso).html

    sed -i 's/tagnumber/Tag\ Number/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/date/Date/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/etheraddress/MAC\ Address/' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/action/Action/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/mode/Mode/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/cloneimg/Image\ Name/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/timestotal/Total\ Jobs\ Ran/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html
    sed -i 's/avgtimeall/Average\ Time\ To\ Complete/g' /mnt/uit-tss-laptop-job-report-$(date --iso).html


    mysql --user="laptops" --password="UHouston!" --database="laptops" --html --execute="\
    SELECT tagnumber,date,etheraddress,action,mode,cloneimg,timestotal,avgtimeall \
    FROM laptopstats WHERE date = ${DATE};" > /mnt/uit-tss-laptop-daily-report-$(date --iso).html

    sed -i 's/tagnumber/Tag\ Number/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/date/Date/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/etheraddress/MAC\ Address/' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/action/Action/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/mode/Mode/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/cloneimg/Image\ Name/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/timestotal/Total\ Jobs\ Ran/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
    sed -i 's/avgtimeall/Average\ Time\ To\ Complete/g' /mnt/uit-tss-laptop-daily-report-$(date --iso).html
