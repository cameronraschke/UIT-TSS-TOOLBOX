#!/usr/bin/php
<?php

require('/var/lib/UIT-TSS-TOOLBOX/PDO-connect');
require('/var/lib/UIT-TSS-TOOLBOX/functions');



function dbSelect ($sql) {
    clearArray();
    global $pdo;
    global $arr;
    $arr = array();
    if (filter($sql) == 0) {
        $sql = $pdo->prepare($sql);
        $sql->execute();
        $arr = $sql->fetchAll(PDO::FETCH_COLUMN);
    } else {
        exit();
    }
}

function dbIterate ($string) {
    clearArray();
    global $pdo;
    global $arr;
    $arr = array();
    if (filter($string) == 0) {
        dbSelect($string);
        foreach ($arr as $key=>$value) {
            echo("$value");
        }
    } else {
        exit();
    }
}

?>