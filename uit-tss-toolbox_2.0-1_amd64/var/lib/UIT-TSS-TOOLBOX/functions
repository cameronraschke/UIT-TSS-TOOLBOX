#!/usr/bin/php
<?php

function filter ($string) {
    if ($string == "" || $string == " " || $string == "NULL" || empty($string) || is_null($string)) {
        return 1;
    } else {
        return 0;
    }
}

function clearArray() {
    unset($GLOBALS["result"]);
    unset($GLOBALS["arr"]);
    unset($GLOBALS["timeArr"]);
    unset($GLOBALS["execTime"]);
    unset($GLOBALS["arrayobject"]);
}

function timeSinceLastMarker($key) {
    global $timeArr;
    global $execTime;

    if (filter($timeArr) == 1) {
        $timeArr = array();
    }

    if ($key == "start") {
        $timeArr = array();
        array_push($timeArr, hrtime(true));
    } elseif ($key == "end") {
        array_push($timeArr, hrtime(true));
        $execTime = round((end($timeArr) - reset($timeArr)) / 1e9, 4);
    } elseif (is_numeric($key)) {
        array_push($timeArr, hrtime(true));
    }

    $arrayobject = new ArrayObject($timeArr);

    for($iterator = $arrayobject->getIterator();
    $iterator->valid();
    $iterator->next()) {
        $curKey = $iterator->count();
        $curVal = $iterator->current();
        $previousVal = $iterator->seek($curKey - 1);
    }

    if ($curKey > 0) {
        $iterator->rewind();
        $start = $iterator->current();
        $iterator->seek($iterator->count());
        $end = $curKey = $iterator->current();
    }
    
    $execTime = round(($curVal - $previousVal) / 1e9, 4);

    echo $execTime;
}

?>