#!/bin/bash
while true; do
    NIC=$(ip addr | awk '/state UP/ {print $2}' | sed 's/://g')

    oldTXBytes=$(cat /sys/class/net/${NIC}/statistics/tx_bytes)
    oldRXBytes=$(cat /sys/class/net/${NIC}/statistics/rx_bytes)
    sleep 1
    newTXBytes=$(cat /sys/class/net/${NIC}/statistics/tx_bytes)
    newRXBytes=$(cat /sys/class/net/${NIC}/statistics/rx_bytes)

    TX=$(( newTXBytes - oldTXBytes ))
    RX=$(( newRXBytes - oldRXBytes ))

    SUM=$(( TX + RX ))
    echo $SUM >> /tmp/network-usage.txt

done