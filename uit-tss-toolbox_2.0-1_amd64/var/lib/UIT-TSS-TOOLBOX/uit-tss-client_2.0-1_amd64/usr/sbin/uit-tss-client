#!/bin/bash
SSD_REGEX='sd.*'
NVME_REGEX='nvme.*'
SCSI_REGEX='hd.*'
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
BLUE=$(tput setaf 4)
BOLD=$(tput bold)
DIM=$(tput dim)
RESET=$(tput sgr0)
cloneElapsed="0"
shredElapsed="0"

kill $(ps | grep 'uit-cpu' | awk '{ print $1 }') 2>/dev/null
kill $(ps | grep 'uit-network' | awk '{ print $1 }') 2>/dev/null
kill $(ps | grep 'uit-sql' | awk '{ print $1 }') 2>/dev/null

uit-cpu-stats &
uit-network-stats &

scp -r cameron@mickey.uit:/home/cameron/sounds/findmy1.mp3 /root &>/dev/null

echo ""
echo "${BOLD}Changing font...${RESET}"
if [[ $(dmidecode --string system-product-name) == "Latitude 3560" ]]; then
	/usr/bin/setfont /usr/share/consolefonts/Lat7-Terminus22x11.psf.gz &>/dev/null
else
	/usr/bin/setfont /usr/share/consolefonts/Lat7-Terminus32x16.psf.gz &>/dev/null
fi
echo "${GREEN}Done.${RESET}"

echo ""
echo "${BOLD}Changing brightness...${RESET}"
maxBrightness=$(cat /sys/class/backlight/*/max_brightness)
echo "${maxBrightness}" > /sys/class/backlight/*/brightness 2>/dev/null
echo "${GREEN}Done.${RESET}"

# echo ""
# echo "${BOLD}Configuring networking....${RESET}"
# sysctl --quiet --write "net.ipv6.conf.all.disable_ipv6=1"
# sysctl --quiet --write "net.ipv6.conf.default.disable_ipv6=1"
# sysctl --quiet --write "net.ipv4.conf.default.rp_filter=2"
# sysctl --quiet --write "net.ipv4.conf.all.rp_filter=2"
# sysctl --quiet --write "net.ipv4.ip_forward=0"
# sysctl --quiet --write "net.ipv6.conf.all.forwarding=1"
# sysctl --quiet --write "net.ipv6.conf.default.forwarding=1"
# sysctl --quiet --load

# for i in $(ip addr | awk '/state UP/ {print $2}' | sed 's/://g'); do
#  	ip link set "${iface}" up
#  	dhclient -r "${iface}"
#  	dhclient -4 "${iface}"
# done &>/dev/null
# echo "${GREEN}Done.${RESET}"

echo ""
echo "${BOLD}Syncing time...${RESET}"
echo "[Time]
NTP=10.0.0.1" > /etc/systemd/timesyncd.conf

systemctl daemon-reload &>/dev/null
/usr/bin/timedatectl set-timezone 'America/Chicago'
/usr/bin/timedatectl set-ntp true
/usr/bin/timedatectl set-local-rtc false

#cat <<'EOF' > /etc/chrony/chrony.conf
#server 10.0.0.1 iburst
#driftfile /var/lib/chrony/drift
#rtcsync
#EOF

/usr/bin/chronyc add server 10.0.0.1 iburst
/usr/bin/chronyc makestep

while [[ $(echo "SELECT CONCAT(CURDATE(), ' ', CURTIME()) AS result" | /var/lib/UIT-TSS-TOOLBOX/select) != $(date '+%Y-%m-%d %H:%M:%S') ]]; do
	sleep 0.01
done
echo "${GREEN}Done.${RESET}"

echo ""
echo "${BOLD}Running disk checks....${RESET}"
for i in $(lsblk -o NAME --nodeps --noheadings --exclude 1,2,7,11); do
	if [[ $(cat /sys/block/${i}/removable) == 0 ]]; then
		smartctl -t short -a /dev/${i} > /root/smartctl-data
	fi
done
echo "${GREEN}Done.${RESET}"

# echo ""
# echo "${BOLD}Running battery checks....${RESET}"
# upower -i /org/freedesktop/UPower/devices/battery_BAT0 > /root/battery-data
# echo "${GREEN}Done.${RESET}"

echo ""
echo "${BOLD}Configuring audio...${RESET}"
/usr/bin/amixer sset Master 100% &>/dev/null
/usr/bin/amixer set Master unmute &>/dev/null
/usr/bin/amixer sset Speakers 100% &>/dev/null
/usr/sbin/amixer set Speakers unmute &>/dev/null
echo "${GREEN}Done.${RESET}"

systemctl mask sleep.target suspend.target hibernate.target hybrid-sleep.target


etherAddr=$(for i in $(ip addr | awk '/state UP/ {print $2}' | sed 's/://g'); do cat /sys/class/net/${i}/address; done)
wifiMac=$(cat /sys/class/ieee80211/phy*/macaddress 2>/dev/null)
tOneSerialNumber=$(dmidecode --string system-serial-number)
ipAddr=$(ip addr | grep -C 2 'state UP' | grep 'inet' | grep -oP '10.0.0.[0-9]{1,3}/24' | sed 's/\/24//g')


function remote {
	task=$(echo "SELECT task AS result FROM remote WHERE tagnumber = ${tagNum}" | /var/lib/UIT-TSS-TOOLBOX/select)
}

function department {
	sqlDepartment=$(echo "SELECT department AS result FROM jobstats WHERE system_serial = '${tOneSerialNumber}' AND department IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
}

DATE=$(date --iso)
linuxPath="images"

tput reset

function diskData {
		###Disk Data
	for i in $(lsblk -o NAME --nodeps --noheadings --exclude 1,2,7,11); do
		if [[ $(cat /sys/block/${i}/removable) == 0 ]]; then
			DISK="$i"
			echo "general|disk|${DISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi

		if [[ $DISK =~ $NVME_REGEX ]]; then
		diskModel=$(cat /root/smartctl-data | grep '^Model Number: ' | sed 's/Model Number: *//g')
			echo "general|disk_model|${diskModel}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSerial=$(cat /root/smartctl-data | grep '^Serial Number: ' | sed 's/Serial Number: *//g')
			echo "general|disk_serial|${diskSerial}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskFirmware=$(cat /root/smartctl-data | grep '^Firmware Version: ' | sed 's/Firmware Version: *//g')
			echo "general|disk_firmware|${diskFirmware}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskTemp=$(cat /root/smartctl-data | grep '^Temperature: ' | sed 's/[^0-9]//g')
			echo "general|disk_temp|${diskTemp}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSize=$(( $(cat /root/smartctl-data | grep 'Size/Capacity' | sed 's/,//g' | awk '{print $4}') / 1000000000 ))
			echo "general|disk_size|${diskSize}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskReadsLBA=$(cat /root/smartctl-data | grep '^Data Units Read: ' | sed 's/,//g' | awk '{print $4}')
			echo "general|disk_reads|${diskReadsLBA}|${UUID}|nvme" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskWritesLBA=$(cat /root/smartctl-data | grep '^Data Units Written: ' | sed 's/,//g' | awk '{print $4}')
			echo "general|disk_writes|${diskWritesLBA}|${UUID}|nvme" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskPowerOnHours=$(cat /root/smartctl-data | grep '^Power On Hours: ' | awk '{print $4}' | sed 's/,//g')
			echo "general|disk_power_on_hours|${diskPowerOnHours}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskType=nvme
			echo "general|disk_type|${diskType}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi

		if [[ $DISK =~ $SSD_REGEX ]]; then
		diskModel=$(cat /root/smartctl-data | grep '^Device Model: ' | sed 's/Device Model: *//g')
			echo "general|disk_model|${diskModel}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSerial=$(cat /root/smartctl-data | grep '^Serial Number: ' | sed 's/Serial Number: *//g')
			echo "general|disk_serial|${diskSerial}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskFirmware=$(cat /root/smartctl-data | grep '^Firmware Version: ' | sed 's/Firmware Version: *//g')
			echo "general|disk_firmware|${diskFirmware}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskTemp=$(cat /root/smartctl-data | grep '^194 Temperature_Celsius' | awk '{print $10}')
			echo "general|disk_temp|${diskTemp}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSize=$(( $(cat /root/smartctl-data | grep '^User Capacity' | sed 's/,//g' | awk '{print $3}') / 1000000000 ))
			echo "general|disk_size|${diskSize}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskReadsLBA=$(cat /root/smartctl-data | grep '^242 Total_LBAs_Read' | awk '{print $10}')
			echo "general|disk_reads|${diskReadsLBA}|${UUID}|sata" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskWritesLBA=$(cat /root/smartctl-data | grep '^241 Total_LBAs_Written' | sed 's/,//g' | awk '{print $10}')
			echo "general|disk_writes|${diskWritesLBA}|${UUID}|sata" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskType=$(lsblk --nodeps --output NAME,ROTA | grep -i "${DISK}"  | awk '{ print $2 }' | tail -n 1)
			echo "general|disk_type|${diskType}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
			if [[ $diskType == "1" ]]; then
				diskType="hdd"
				else
				diskType="ssd"
			fi
		diskPowerOnHours=$(cat /root/smartctl-data | grep '9 Power_On_Hours' | awk '{print $10}')
			echo "general|disk_power_on_hours|${diskPowerOnHours}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi
	done
}

function hardwareData {
# 53 cols in art
terminalCols=$(( $(tput cols) / 2 ))
# 5 rows in art, first number in tput cup
terminalRows=$(( $(tput lines) / 2 ))
if [[ $(tput cols) -gt 66 && $(tput lines) -gt 25 ]]; then
tput reset
echo "${BOLD}"
echo "${RED}"
tput cup 1 0
cat <<'EOF'
  _    _       _                    _ _             
 | |  | |     (_)                  (_) |            
 | |  | |_ __  ___   _____ _ __ ___ _| |_ _   _     
 | |  | | '_ \| \ \ / / _ \ '__/ __| | __| | | |    
 | |__| | | | | |\ V /  __/ |  \__ \ | |_| |_| |    
  \____/|_| |_|_| \_/ \___|_|  |___/_|\__|\__, |    
        / _| | |  | |               | |    __/ |    
   ___ | |_  | |__| | ___  _   _ ___| |_ _|___/ __  
  / _ \|  _| |  __  |/ _ \| | | / __| __/ _ \| '_ \ 
 | (_) | |   | |  | | (_) | |_| \__ \ || (_) | | | |
  \___/|_|   |_|  |_|\___/ \__,_|___/\__\___/|_| |_|                 
EOF

echo "${RESET}"
echo "${BOLD}"
tput cup 12 0
cat <<'EOF'
-----------------------------------------------------

  ___       __ _                         _         
 / __| ___ / _| |___ __ ____ _ _ _ ___  | |__ _  _ 
 \__ \/ _ \  _|  _\ V  V / _` | '_/ -_) | '_ \ || |
 |___/\___/_|  \__|\_/\_/\__,_|_| \___| |_.__/\_, |
                                              |__/ 
   ___                               ___             _    _       
  / __|__ _ _ __  ___ _ _ ___ _ _   | _ \__ _ ___ __| |_ | |_____ 
 | (__/ _` | '  \/ -_) '_/ _ \ ' \  |   / _` (_-</ _| ' \| / / -_)
  \___\__,_|_|_|_\___|_| \___/_||_| |_|_\__,_/__/\__|_||_|_\_\___|
EOF
echo "${RESET}"
echo "${BOLD}Inputing data into database...${RESET}"
sleep 1
fi
	echo "general|host_connected|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	### DMI Data
	#t0 = BIOS
	#t1 = system
	#t2 = Base Board/Motherboard
	#t3 = Chassis
	#t4 = Processor
	#t22 = Battery
	#t32 = Boot Status
	tZeroBiosVersion=$(dmidecode --string bios-version)
		echo "general|bios_version|${tZeroBiosVersion}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tZeroBiosReleaseDate=$(dmidecode --string bios-release-date)
		echo "general|bios_date|${tZeroBiosReleaseDate}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tZeroFirmwareRevision=$(dmidecode --string firmware-revision)
		echo "general|bios_firmware|${tZeroFirmwareRevision}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tOneManufacturer=$(dmidecode --string system-manufacturer)
		echo "general|system_manufacturer|${tOneManufacturer}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tOneProductName=$(dmidecode --string system-product-name)
		echo "general|system_model|${tOneProductName}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tOneSerialNumber=$(dmidecode --string system-serial-number)
		echo "general|system_serial|${tOneSerialNumber}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tOneUUID=$(dmidecode --string system-uuid)
		echo "general|system_uuid|${tOneUUID}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tOneSKU=$(dmidecode --string system-sku-number)
		echo "general|system_sku|${tOneSKU}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tTwoManufacturer=$(dmidecode --string baseboard-manufacturer)
		echo "general|motherboard_manufacturer|${tTwoManufacturer}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tTwoSerialNumber=$(dmidecode --string baseboard-serial-number)
		echo "general|motherboard_serial|${tTwoSerialNumber}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tThreeType=$(dmidecode --string chassis-type | head -n1)
		echo "general|chassis_type|${tThreeType}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tFourManufacturer=$(dmidecode --string processor-manufacturer)
		echo "general|cpu_manufacturer|${tFourManufacturer}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tFourVersion=$(dmidecode --string processor-version)
		echo "general|cpu_model|${tFourVersion}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tFourMaxSpeed=$(dmidecode -t4 | grep 'Max Speed' | sed 's/[^0-9]//g')
		echo "general|cpu_maxspeed|${tFourMaxSpeed}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tFourCoreCount=$(dmidecode -t4 | grep 'Core Count' | sed 's/Core Count: //g' | sed 's/^[[:space:]]*//g')
		echo "general|cpu_cores|${tFourCoreCount}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	tFourThreadCount=$(dmidecode -t4 | grep 'Thread Count' | sed 's/Thread Count: //g' | sed 's/^[[:space:]]*//g')
		echo "general|cpu_threads|${tFourThreadCount}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	###Disk Data
	for i in $(lsblk -o NAME --nodeps --noheadings --exclude 1,2,7,11); do
		if [[ $(cat /sys/block/${i}/removable) == 0 ]]; then
			DISK="$i"
			echo "general|disk|${DISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi

		if [[ $DISK =~ $NVME_REGEX ]]; then
		diskModel=$(cat /root/smartctl-data | grep '^Model Number: ' | sed 's/Model Number: *//g')
			echo "general|disk_model|${diskModel}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSerial=$(cat /root/smartctl-data | grep '^Serial Number: ' | sed 's/Serial Number: *//g')
			echo "general|disk_serial|${diskSerial}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskFirmware=$(cat /root/smartctl-data | grep '^Firmware Version: ' | sed 's/Firmware Version: *//g')
			echo "general|disk_firmware|${diskFirmware}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskTemp=$(cat /root/smartctl-data | grep '^Temperature: ' | sed 's/[^0-9]//g')
			echo "general|disk_temp|${diskTemp}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSize=$(( $(cat /root/smartctl-data | grep 'Size/Capacity' | sed 's/,//g' | awk '{print $4}') / 1000000000 ))
			echo "general|disk_size|${diskSize}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskReadsLBA=$(cat /root/smartctl-data | grep '^Data Units Read: ' | sed 's/,//g' | awk '{print $4}')
			echo "general|disk_reads|${diskReadsLBA}|${UUID}|nvme" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskWritesLBA=$(cat /root/smartctl-data | grep '^Data Units Written: ' | sed 's/,//g' | awk '{print $4}')
			echo "general|disk_writes|${diskWritesLBA}|${UUID}|nvme" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskPowerOnHours=$(cat /root/smartctl-data | grep '^Power On Hours: ' | awk '{print $4}' | sed 's/,//g')
			echo "general|disk_power_on_hours|${diskPowerOnHours}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskType=nvme
			echo "general|disk_type|${diskType}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi

		if [[ $DISK =~ $SSD_REGEX ]]; then
		diskModel=$(cat /root/smartctl-data | grep '^Device Model: ' | sed 's/Device Model: *//g')
			echo "general|disk_model|${diskModel}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSerial=$(cat /root/smartctl-data | grep '^Serial Number: ' | sed 's/Serial Number: *//g')
			echo "general|disk_serial|${diskSerial}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskFirmware=$(cat /root/smartctl-data | grep '^Firmware Version: ' | sed 's/Firmware Version: *//g')
			echo "general|disk_firmware|${diskFirmware}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskTemp=$(cat /root/smartctl-data | grep '^194 Temperature_Celsius' | awk '{print $10}')
			echo "general|disk_temp|${diskTemp}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskSize=$(( $(cat /root/smartctl-data | grep '^User Capacity' | sed 's/,//g' | awk '{print $3}') / 1000000000 ))
			echo "general|disk_size|${diskSize}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskReadsLBA=$(cat /root/smartctl-data | grep '^242 Total_LBAs_Read' | awk '{print $10}')
			echo "general|disk_reads|${diskReadsLBA}|${UUID}|sata" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskWritesLBA=$(cat /root/smartctl-data | grep '^241 Total_LBAs_Written' | sed 's/,//g' | awk '{print $10}')
			echo "general|disk_writes|${diskWritesLBA}|${UUID}|sata" | /var/lib/UIT-TSS-TOOLBOX/parse
		diskType=$(lsblk --nodeps --output NAME,ROTA | grep -i "${DISK}"  | awk '{ print $2 }' | tail -n 1)
			echo "general|disk_type|${diskType}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
			if [[ $diskType == "1" ]]; then
				diskType="hdd"
				else
				diskType="ssd"
			fi
		diskPowerOnHours=$(cat /root/smartctl-data | grep '9 Power_On_Hours' | awk '{print $10}')
			echo "general|disk_power_on_hours|${diskPowerOnHours}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi
	done

	###Battery Data
	if [[ -f /sys/class/power_supply/BAT0/charge_full_design ]]; then
		batChargeNow=$(cat /sys/class/power_supply/BAT0/charge_full)
		batChargeFactory=$(cat /sys/class/power_supply/BAT0/charge_full_design)
		batHealthPCNT=$(( batChargeNow * 100 / batChargeFactory ))
			echo "general|battery_health|${batHealthPCNT}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		batChargeCycles=$(cat /sys/class/power_supply/BAT0/cycle_count)
			echo "general|battery_charge_cycles|${batChargeCycles}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	elif [[ -f /sys/class/power_supply/BAT1/energy_full_design ]]; then
		batChargeNow=$(cat /sys/class/power_supply/BAT1/energy_full)
		batChargeFactory=$(cat /sys/class/power_supply/BAT1/energy_full_design)
		batHealthPCNT=$(( batChargeNow * 100 / batChargeFactory ))
			echo "general|battery_health|${batHealthPCNT}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		batChargeCycles=$(cat /sys/class/power_supply/BAT1/cycle_count)
			echo "general|battery_charge_cycles|${batChargeCycles}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	fi
	
	tTwentyTwoName=$(dmidecode -t22 | grep 'Name' | sed 's/Name: //g' | sed 's/^[[:space:]]*//g')
	if [[ -z $tTwentyTwoName ]]; then
		if [[ -f /sys/class/power_supply/BAT0/model_name ]]; then
			tTwentyTwoName=$(cat /sys/class/power_supply/BAT0/model_name)
		elif [[ -f /sys/class/power_supply/BAT1/model_name ]]; then
			tTwentyTwoName=$(cat /sys/class/power_supply/BAT1/model_name)
		fi
	fi
		echo "general|battery_model|${tTwentyTwoName}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	
	tTwentyTwoCapacity=$(dmidecode -t22 | grep 'Design Capacity' | sed 's/[^0-9]//g')
		echo "general|battery_capacity|${tTwentyTwoCapacity}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	tTwentyTwoSerialNumber=$(dmidecode -t22 | grep 'SBDS Serial Number' | sed 's/SBDS Serial Number: //g' | sed 's/^[[:space:]]*//g')
	if [[ -z $tTwentyTwoSerialNumber ]]; then
		if [[ -f /sys/class/power_supply/BAT0/serial_number ]]; then
			tTwentyTwoSerialNumber=$(cat /sys/class/power_supply/BAT0/serial_number)
		elif [[ -f /sys/class/power_supply/BAT1/serial_number ]]; then
			tTwentyTwoSerialNumber=$(cat /sys/class/power_supply/BAT1/serial_number)
		fi
	fi
		echo "general|battery_serial|${tTwentyTwoSerialNumber}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	tTwentyTwoManufactureDate=$(dmidecode -t22 | grep 'SBDS Manufacture Date' | sed 's/SBDS Manufacture Date: //g' | sed 's/^[[:space:]]*//g')
		echo "general|battery_manufacturedate|${tTwentyTwoManufactureDate}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	###Memory Data
	memSerial=$(dmidecode --type memory | grep -P '\tSerial Number' | sed 's/Serial Number: //g' | tr '\n' ' ' | tr '\t' ' ' | sed 's/ Not Specified //g' | sed 's/^ //g' | tr ' ' '-' | sed 's/-$//g')
		echo "general|ram_serial|${memSerial}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	memCapacity=$(grep MemTotal /proc/meminfo | awk '{ print $2 }')
		echo "general|ram_capacity|${memCapacity}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	memSpeed=$(dmidecode --type 17 | grep '^[[:space:]]*Speed\:' | head -n1 | sed 's/[^0-9]'//g)
		echo "general|ram_speed|${memSpeed}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	###Boot Times
	bootTime=$(systemd-analyze | grep -oP '[0-9]+[0-9.]*' | head -n 1)
		echo "general|boot_time|${bootTime}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	###CPU Info
	cpuTemp=$(cat /sys/class/thermal/thermal_zone2/temp 2>/dev/null)
		echo "general|cpu_temp|${cpuTemp}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	###WiFi Info
	wifiMac=$(cat /sys/class/ieee80211/phy*/macaddress 2>/dev/null)
		echo "general|wifi_mac|${wifiMac}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	echo "system-stats|cpu|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	echo "system-stats|network|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
}



function enterTag {
	local regex="[[:digit:]]{6}"
	tput reset
	echo ""

	tagNum=$(echo "SELECT tagnumber AS result FROM jobstats WHERE system_serial = '$tOneSerialNumber' AND tagnumber IS NOT NULL AND department IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
	if [[ $tagNum != "NULL" ]]; then
		if [[ $sqlDepartment == "shrl" ]]; then
			UUID=$(echo -n "shrl-"; cat /proc/sys/kernel/random/uuid)
			department="shrl"
		elif [[ $sqlDepartment == "techComm" ]]; then
			UUID=$(echo -n "techComm-"; cat /proc/sys/kernel/random/uuid)
			department="techComm"
		elif [[ $sqlDepartment == "property" ]]; then
			UUID=$(echo -n "property-"; cat /proc/sys/kernel/random/uuid)
			department="property"
		else
			UUID=$(cat /proc/sys/kernel/random/uuid)
		fi

		echo "init|${UUID}|${tagNum}|${tOneSerialNumber}|${etherAddr}|${wifiMac}" | /var/lib/UIT-TSS-TOOLBOX/parse
		echo "general|department|${department}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		return
	else
		read -p "${BOLD}Please enter the ${GREEN}6-digit tag number${RESET} ${BOLD}followed by ${GREEN}Enter${RESET}${BOLD}:${RESET} " tagNum
		echo ""
		echo "${BOLD}Please select the ${BLUE}department${RESET}${BOLD}:${RESET} "
		echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}TechCommons${RESET}"
		echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}SHRL${RESET}"
		echo "   ${BOLD}${GREEN}[3]${RESET} ${BOLD}Property Management${RESET}"
		echo ""
		read -n 1 -p "${BOLD}Please enter [1-3]:${RESET} " input
		if [[ $input == "1" ]]; then
			department="techComm"
		elif [[ $input == "2" ]]; then
			department="shrl"
		elif [[ $input == "3" ]]; then
			department="property"
		else
			enterTag
		fi

		UUID=$(echo -n "newEntry-"; cat /proc/sys/kernel/random/uuid)

		echo "init|${UUID}|${tagNum}|${tOneSerialNumber}|${etherAddr}|${wifiMac}" | /var/lib/UIT-TSS-TOOLBOX/parse
		echo "general|department|${department}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		department
		enterTag
	fi
}



function info {
	if [[ $ACTION != "" ]]; then
		echo "The selected mode is ${BOLD}${ACTION}${RESET}"
	fi

	if [[ $CLIENTDISK != "" ]]; then
		echo "The selected disk is ${BOLD}${CLIENTDISK}${RESET}"
	fi

	if [[ $cloneMode != "" ]]; then
		echo "The selected clone mode is ${BOLD}${cloneMode}${RESET}"
	fi
	if [[ $cloneImgName != "" ]]; then
		echo "The selected image is ${BOLD}${cloneImgName}${RESET}"
	fi

	echo ""
}



function footer {
	biosUpdatedSQL=$(echo 'SELECT bios_version AS result FROM static_bios_stats WHERE system_model = '"'${tOneProductName}'"'' | /var/lib/UIT-TSS-TOOLBOX/select)
	if [[ $biosUpdatedSQL == "NULL" ]]; then
		biosUpdated="${tZeroBiosVersion}"
	elif [[ $biosUpdatedSQL == $tZeroBiosVersion ]]; then
		biosUpdated="${GREEN}Updated${RESET}"
	elif [[ $biosUpdatedSQL != $tZeroBiosVersion ]]; then
		biosUpdated="${RED}Needs Update${RESET}"
	fi
	tput reset
	lines=$(tput lines)
	tput cup $(( lines - 3 )) 0
	tput el
	echo "Tag: ${tagNum}, Serial: ${tOneSerialNumber}, BIOS: ${biosUpdated}${RESET}"
	tput cup $(( lines - 2 )) 0
	tput el
	echo "${DIM}UIT-TSS-TOOLBOX by ${RESET}Cameron Raschke${DIM} (caraschke@uh.edu). ${RESET}${RED}Go coogs!!${RESET}"
	tput cup 1 0
	info
}



function logo {
	footer
	echo "${RESET}Welcome to UIT-TSS-TOOLBOX by Cameron Raschke ${DIM}(caraschke@uh.edu).${RESET}"
	echo ""
	tput bold
	tput setaf 1
	echo "| |    | |  | |     | |"
	echo "| |    | |  | |_____| |"
	echo "| |    | |  | |_____| |"
	echo "| |____| |  | |     | |"
	echo "\________/  | |     | |"
	tput sgr0
	echo ""
	echo "------------------------------"
}



function manualClient {
	logo
	echo "${BOLD}-General best practices${RESET} "
	echo "   * Sanitize laptops with cleaner before imaging them."
	echo "   * Reset BIOS to default/factory settings before imaging."
	echo "${BOLD}-Dells${RESET} "
	echo "   * Make sure SATA mode is in AHCI mode and not RAID mode."
	echo "      * This is usually under \"System Configuration\" or \"Storage\" in BIOS."
	echo ""
	echo "${BOLD}Please remove the thumb drive and select one of the following options:${RESET} "
	echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}Clone ${DIM}(server -> laptop)${RESET} ${BOLD}an HP laptop${RESET}"
	echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}Clone ${DIM}(server -> laptop)${RESET} ${BOLD}a Dell laptop${RESET}"
	echo "   ${BOLD}${GREEN}[3]${RESET} ${BOLD}Simple erase ${RESET}${DIM}(NVMe, SSD, or HDD)${RESET}"
	echo "   ${BOLD}${GREEN}[9]${RESET} ${BOLD}Other options${RESET} ${DIM}(advanced)${RESET}"
	echo "   ${BOLD}${GREEN}[0]${RESET} ${BOLD}Enter Location${RESET}"
	read -n 1 -p "${BOLD}Please enter [0-9]:${RESET} " mainMenuOpt
}





function powerWarning {
	if [[ $CLIENTDISK =~ $NVME_REGEX ]]; then
		return
	fi
	footer
	echo "${BOLD}${RED}*** WARNING ***${RESET}"
	echo "${BOLD}It is highly recommended to put the computer into hibernate mode. This takes less than 5 seconds.${RESET}"
	echo "${BOLD}${RED}*** WARNING ***${RESET}"
	echo ""
	echo "${BOLD}${GREEN}[1]${RESET} ${BOLD}Hibernate (recommended)${RESET}"
	echo "${BOLD}${GREEN}[2]${RESET} ${BOLD}Skip hibernate${RESET}"
	read -n 1 -p  "${BOLD}Please enter [1-2]:${RESET} " restartBool
	if [[ $restartBool == "1" ]]; then
		footer
		rtcwake --mode mem --seconds 3
		footer
	elif [[ $restartBool == "2" ]]; then
		footer
		echo "${BOLD}${RED}*** WARNING ***${RESET}"
		echo "${BOLD}It is dangerous to skip this step.${RESET}"
		echo "${BOLD}${RED}*** WARNING ***${RESET}"
		echo ""
		read -p "Press ${BOLD}${RED}Enter${RESET} to skip this step and NOT hibernate ${RED}(DANGEROUS)${RESET}.... "
		footer
	else
		powerWarning
	fi
}


function monitorBattery {
	echo "remote|${tagNum}|status|monitoring battery" | /var/lib/UIT-TSS-TOOLBOX/parse
	footer
	lines=$(tput lines)
	while sleep 1; do
		read -t 0.25 -N 1 input
		if [[ $input = "q" ]] || [[ $input = "Q" ]]; then
			break
		else
			if [[ -d /sys/class/power_supply/BAT0 ]]; then
				batCharge=$(cat /sys/class/power_supply/BAT0/capacity)
				batStatus=$(cat /sys/class/power_supply/BAT0/status)
			elif [[ -d /sys/class/power_supply/BAT1 ]]; then
				batCharge=$(cat /sys/class/power_supply/BAT0/capacity)
				batStatus=$(cat /sys/class/power_supply/BAT0/status)
			else
				echo "${RESET}${BOLD}No battery found${RESET}"
				manualClient
			fi

			tput cup 1 0
			echo "${BOLD}Battery Info ${RESET}${DIM}(Press \"Q\" to exit)${BOLD}:${RESET}"
			tput cup 4 1
			tput el
			echo "Status: ${BOLD}${GREEN}${batStatus}${RESET}"
			tput cup 5 1
			tput el
			echo "Current Charge: ${BOLD}${GREEN}${batCharge}%${RESET}"
		fi
	done
}


function appSelect {
	footer
	echo "${BOLD}Please select an ${BLUE}action${RESET}${BOLD}:${RESET} "
	echo ""
	echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}erase and clone${RESET}"
	echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}only erase (advanced)${RESET}"
	echo "   ${BOLD}${GREEN}[3]${RESET} ${BOLD}only clone${RESET}"
	echo "   ${BOLD}${GREEN}[4]${RESET} ${BOLD}monitor battery charge${RESET}"
	read -n 1 -p "${BOLD}Please enter [1-4]:${RESET} " APPSELECT
	if [[ $APPSELECT == "1" ]]; then
		APPSELECT="EC"
		ACTION="erase and clone"
		powerWarning
	elif [[ $APPSELECT == "2" ]]; then
		APPSELECT="E"
		ACTION="erase"
		powerWarning
	elif [[ $APPSELECT == "3" ]]; then
		APPSELECT="C"
		ACTION="clone"
	elif [[ $APPSELECT == "4" ]]; then
		APPSELECT="battery"
	else
		echo ""
		echo "${BOLD}${RED}Please enter a valid number [1-4].${RESET}"
		sleep 0.5
		appSelect
	fi
}



function basicEraseMode_Shred {
	shredMode='autodetect'
	RMODE='Autodetect'
	if [[ $shredMode == 'autodetect' ]]; then
		if [[ $CLIENTDISK =~ $SSD_REGEX ]]; then
			PCNTOFSECTOR="30"
			shredMode='zero'
			RMODE='Zero Mode'
		elif [[ $CLIENTDISK =~ $NVME_REGEX ]]; then
			shredMode='nist'
			RMODE='NIST 800-88r1 Mode'
		else
			PCNTOFSECTOR="30"
			shredMode='zero'
			RMODE='Zero Mode'
		fi
	fi
	echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
}



function advEraseMode_Shred {
	if [[ $(dmidecode --string system-product-name) == "Latitude 3560" ]]; then
		setfont /usr/share/consolefonts/Lat7-Terminus24x12.psf.gz
	else
		setfont /usr/share/consolefonts/Lat7-Terminus28x14.psf.gz
	fi
	footer

	echo ""
	echo "${BOLD}${GREEN}[1]${RESET} ${BOLD}Autodetect${RESET} (Default)
	-Best trade off between security and speed. Autodetects the best mode for your disk."

	echo ""
	echo "${BOLD}${GREEN}[2]${RESET} ${BOLD}NIST 800-88r1${RESET}
	-Fastest for NVME."

	echo ""
	echo "${BOLD}${GREEN}[3]${RESET} ${BOLD}Zero Mode + Quick Verify${RESET}
	-One pass of zeroes, quick verification step."
	
	echo ""
	echo "${BOLD}${GREEN}[4]${RESET} ${BOLD}DOD 5220.22-M/NCSC-TG-025/AFSSI-5020/HMG IS5${RESET}
	-Writes a pass of zeroes, then ones, then a random bit. Verifies each step."

	echo ""
	echo "${BOLD}${GREEN}[5]${RESET} ${BOLD}RCMP TSSIT OPS-II/VSITR${RESET}
	-Alternates between 0's and 1's 6 times. 7th pass writes and verifies a random bit."

	echo ""
	echo "${BOLD}${GREEN}[6]${RESET} ${BOLD}Schneier${RESET}
	-A pass of 1's then a pass of 0's. Five passes of a random pattern of characters."

	echo ""
	echo "${BOLD}${GREEN}[7]${RESET} ${BOLD}Gutmann${RESET}
	-Four random character passes, 27 predefined pattern passes, four more random character passes."
	
	echo ""
	echo "${BOLD}${GREEN}[8]${RESET} ${BOLD}Verify Only${RESET}
	-Does not write data, choose character/pattern to verify."

	echo ""
	echo "${BOLD}${GREEN}[9]${RESET} ${BOLD}Unlock${RESET}
	-Unlocks disks previously locked by this program."

	echo ""
	read -n 1 -p "${BOLD}Please select an option [0-9]:${RESET} " MODESELECT
	echo ""

	case $MODESELECT in
	1)
	shredMode='autodetect'
	RMODE='Autodetect'
	basicEraseMode_Shred
	;;
	2)
	shredMode='nist'
	RMODE='NIST 800-88r1 Mode'
	;;
	3)
	shredMode='zero'
	RMODE='Zero Mode'
	;;
	4)
	shredMode='dod'
	RMODE='DOD 5220.22-M/NCSC-TG-025/AFSSI-5020/HMG IS5 Mode'
	;;
	5)
	shredMode='rcmp'
	RMODE='RCMP TSSIT OPS-II/VSITR Mode'
	;;
	6)
	shredMode='schneier'
	RMODE='Schneier Mode'
	;;
	7)
	shredMode='gutmann'
	RMODE='Gutmann Mode'
	;;
	8)
	shredMode='verify'
	RMODE='Verify Mode'
	;;
	9)
	shredMode='unlock'
	RMODE='Unlock Mode'
	;;
	*)
	modeselect
	;;
	esac

	tput reset
	setfont /usr/share/consolefonts/Lat7-Terminus32x16.psf.gz
	footer
	read -p "Are you sure you want to use ${BOLD}${BLUE}${RMODE}${RESET} on ${BOLD}${BLUE}${CLIENTDISK}${RESET}? Press ${BOLD}${GREEN}Enter${RESET} to continue...${RESET} "

	echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
}



function diskSelect {
	footer
	diskList=$(lsblk --nodeps --noheadings -o NAME,SIZE --exclude 1,2,7,11)
	diskNames=$(echo "${diskList}" | awk '{print $1}')
	CLIENTDISK=""
	diskCount="0"
	local a="0"
	local n="0"
	local diskArr=()

	for i in ${diskNames}; do
		diskCount=$(( diskCount + 1 ))
		diskArr+=( "$i" )
	done

	if [[ $diskCount == "1" ]]; then
		for i in ${!diskArr[@]}; do
			CLIENTDISK=${diskArr[$i]}
		done
		echo "${BOLD}The disk ${BLUE}${CLIENTDISK}${RESET} ${BOLD}has been automatically selected because it is the only detected disk."
		read -n 1 -p "Press ${BOLD}${GREEN}[1]${RESET} ${BOLD}to confirm:${RESET} " input
		if [[ $input != "1" ]]; then
			echo "${BOLD}${RED}Reselecting disk.${RESET}"
			sleep 0.5
			diskSelect
		fi
	else
		echo "${BOLD}Which disk do you want to ${BLUE}${ACTION}${RESET}${BOLD}?"
		while read -r line; do
			a=$(( a + 1 ))
			echo "${BOLD}${GREEN}[${a}]${RESET} $line"
		done < <(echo "${BOLD}${diskList}${RESET}")

		echo ""
		read -n 1 -p "${BOLD}Please select [1-$a]:${RESET} " CLIENTDISK
		for i in ${!diskArr[@]}; do
			n=$(( $n + 1 ))
			if [[ $n == $CLIENTDISK ]]; then
				CLIENTDISK=${diskArr[$i]}
			fi
		done
		echo ""
		echo ""
	fi
	
	if [[ $CLIENTDISK =~ ${NVME_REGEX} || $CLIENTDISK =~ ${SSD_REGEX} ]]; then
		echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	else
	    echo ""
	    echo "${BOLD}${RED}Invalid disk regex check.${RESET}"
		sleep 0.5
	    diskSelect
	fi	
}



function randBit_Shred {
	RANDBIT=$(cat /dev/urandom | xxd -plain | head -1 | cut -c 1)
}



function randPattern_Shred {
	RANDPATTERN=$(cat /dev/urandom | xxd -plain | head -1 | cut -c 8)
}



function writeDisk_Shred {
	echo "remote|${tagNum}|status|erasing disk ($shredMode)" | /var/lib/UIT-TSS-TOOLBOX/parse
	if [[ -z $SECTIONS ]]; then
		SECTIONS='1000'
	fi

	if [[ -z $PCNTOFSECTOR ]]; then
		PCNTOFSECTOR='100'
	fi

	if [[ -z $CHAR ]]; then
		CHAR='0'
	fi

	if [[ -z $WMODE ]]; then
		WMODE='zero'
	fi
	
	if [[ $WMODE == "zero" ]]; then
		SOURCE='cat /dev/zero'
		BITS='null bits'
	fi

	if [[ $WMODE == "random" ]]; then
		SOURCE='cat /dev/urandom'
		BITS='random bits'
	fi

	if [[ $WMODE == "randBit_Shred" ]]; then
		randBit_Shred
		SOURCE="yes \"${RANDBIT}\""
		BITS="a random bit (${RANDBIT})"
	fi

	if [[ "$WMODE" == 'randPattern_Shred' ]]; then
		randPattern_Shred
		SOURCE="yes \"${RANDPATTERN}\""
		BITS="a random pattern (${RANDPATTERN})"
	fi

	if [[ "$WMODE" == 'char' ]]; then
		SOURCE="yes \"${CHAR}\""
		BITS="\"${CHAR}\""
	fi

	BS='512'
	diskBytes=$(blockdev --getsize64 /dev/${CLIENTDISK})
	sectorSize=$((diskBytes / BS / SECTIONS))

	echo "Filling ${PCNTOFSECTOR}% of ${CLIENTDISK} with a stream of ${BITS}...."
	echo "general|erase_diskpercent|${PCNTOFSECTOR}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	if [[ $PCNTOFSECTOR == '100' ]]; then
		${SOURCE} | (pv > /dev/${CLIENTDISK})
		return 0
	fi
	
	while [[ $i -lt $SECTIONS ]]; do
		i=$((i + 1))
		tput cuu1
		tput el
		echo "Writing to section ${i}/${SECTIONS}"
		sectorMin=$((i * sectorSize))
		sectorMax=$((sectorMin + sectorSize))
		sectorDiff=$((sectorMax - sectorMin))
		COUNT=$((sectorDiff / 100 * PCNTOFSECTOR))
		randSector=$(shuf -i ${sectorMin}-$((sectorMax - COUNT)) -n 1)

		SKIP=$(shuf -i ${randSector}-${sectorMax} -n 1)
    	${SOURCE} | dd bs=${BS} count=${COUNT} seek=${SKIP} of=/dev/${CLIENTDISK} iflag=fullblock status=none 2>/dev/null
	done

	echo ""
	echo "Completely filling the first sector...."
    ${SOURCE} | dd bs=${BS} count=${COUNT} seek=0 of=/dev/${CLIENTDISK} iflag=fullblock status=none 2>/dev/null
	echo "Completely filling the last sector...."
	${SOURCE} | dd bs=${BS} count=${COUNT} seek=$(( ${sectorCount} - 1 )) of=/dev/${CLIENTDISK} iflag=fullblock status=none 2>/dev/null
}



function vrfyDisk_Shred {
	echo "remote|${tagNum}|status|verifying erase ($shredMode)" | /var/lib/UIT-TSS-TOOLBOX/parse
	if [[ -z $SECTIONS ]]; then
		SECTIONS='1000'
	fi

	if [[ -z $PCNTOFSECTOR ]]; then
		PCNTOFSECTOR='100'
	fi

	BS='512'
	diskBytes=$(blockdev --getsize64 /dev/${CLIENTDISK})
	sectorSize=$((diskBytes / BS / SECTIONS))
	PROCFAIL='0'

	if [[ -z $CHAR ]]; then
		CHAR='0'
	fi

	echo "Looking for non-${CHAR}'s on ${CLIENTDISK}...."

	if [[ $PCNTOFSECTOR == '100' ]]; then
		if [[ $(pv /dev/${CLIENTDISK} | xxd -p | grep --quiet -m 1 "[^${CHAR}]"; echo ${PIPESTATUS[2]}) == '0' ]]; then
		    PROCFAIL='1'
			echo "remote|${tagNum}|status|fail - verifying erase" | /var/lib/UIT-TSS-TOOLBOX/parse
            read -t 10 -p "${BOLD}${RED}Verification test failed${RESET}${BOLD}. Press ${GREEN}Enter${RESET}${BOLD}..."
			uit-tss-client
		else
        	echo "${BOLD}The drive ${CLIENTDISK} is completely and securely wiped.${RESET}"
			PROCFAIL='0'
		fi
	fi
	
	while [[ $i -lt $SECTIONS && $PROCFAIL == '0' ]]; do
		i=$((i + 1))
		tput cuu1
		tput el
		echo "Verifying section ${i}/${SECTIONS}"
		sectorMin=$((i * sectorSize))
		sectorMax=$((sectorMin + sectorSize))
		sectorDiff=$((sectorMax - sectorMin))
		COUNT=$((sectorDiff / 100 * PCNTOFSECTOR))
		randSector=$(shuf -i ${sectorMin}-$((sectorMax - COUNT)) -n 1)


		SKIP=$(shuf -i ${randSector}-${sectorMax} -n 1)
    	if [[ $(dd if=/dev/${CLIENTDISK} bs=${BS} count=${COUNT} skip=${SKIP} iflag=fullblock status=none 2>/dev/null \
        	| xxd -p | grep --quiet -m 1 "[^${CHAR}]"; echo ${PIPESTATUS[2]}) == '0' ]]; then
            	PROCFAIL='1'
				echo "remote|${tagNum}|status|fail - verifying erase" | /var/lib/UIT-TSS-TOOLBOX/parse
            	read -t 10 -p "${BOLD}${RED}Verification test failed${RESET}${BOLD}. Press ${GREEN}Enter${RESET}${BOLD}..."
				uit-tss-client
    	fi

	done

	echo ""
	echo "Verifing the first sector of the disk...."
	if [[ $(dd if=/dev/${CLIENTDISK} count=${sectorCount} skip=0 iflag=fullblock status=none 2>/dev/null \
        | xxd -p | grep --quiet -m 1 "[^${CHAR}]"; echo ${PIPESTATUS[2]}) == '0'  ]]; then
            	PROCFAIL='1'
				echo "remote|${tagNum}|status|fail - verifying erase" | /var/lib/UIT-TSS-TOOLBOX/parse
            	read -t 10 -p "${BOLD}${RED}Verification test failed${RESET}${BOLD}. Press ${GREEN}Enter${RESET}${BOLD}..."
				uit-tss-client
    fi
	echo "Verifing the last sector of the disk...."
    if [[ $(dd if=/dev/${CLIENTDISK} count=${sectorCount} skip=$(( ${sectorCount} - 1 )) \
		iflag=fullblock status=none 2>/dev/null \
        | xxd -p | grep --quiet -m 1 "[^${CHAR}]"; echo ${PIPESTATUS[2]}) == '0' ]]; then
            	PROCFAIL='1'
				echo "remote|${tagNum}|status|fail - verifying erase" | /var/lib/UIT-TSS-TOOLBOX/parse
				read -t 10 -p "${BOLD}${RED}Verification test failed${RESET}${BOLD}. Press ${GREEN}Enter${RESET}${BOLD}..."
				uit-tss-client
    fi

    echo "${PCNTOFSECTOR}% of ${CLIENTDISK} has been verified."
	if [[ $PROCFAIL == '0' ]]; then
		echo "Test passed successfully!"
		return 0
	else
		echo "remote|${tagNum}|status|fail - verifying erase" | /var/lib/UIT-TSS-TOOLBOX/parse
		read -t 10 -p "${BOLD}${RED}Verification test failed${RESET}${BOLD}. Press ${GREEN}Enter${RESET}${BOLD}..."
		uit-tss-client
	fi
}



function secErase_Shred {
	echo "remote|${tagNum}|status|secure erase" | /var/lib/UIT-TSS-TOOLBOX/parse
	footer
	if [[ $CLIENTDISK =~ $SSD_REGEX ]]; then 
		echo "Using Secure Erase on ${CLIENTDISK}. This can take a while, please keep the device powered on...."
		if [[ /dev/${CLIENTDISK} ]]; then
			hdparm --user-master u --security-set-pass UHouston /dev/${CLIENTDISK} &>/dev/null
			hdparm --user-master u --security-erase UHouston /dev/${CLIENTDISK} &>/dev/null
		fi
	elif [[ $CLIENTDISK =~ $NVME_REGEX ]]; then
		echo "Using Secure Erase on ${CLIENTDISK:0:-2}. This can take a while, please keep the device powered on...."
		if [[ /dev/${CLIENTDISK:0:-2} ]]; then
			nvme format /dev/${CLIENTDISK:0:-2} --ses=1 --namespace-id=1 &>/dev/null
			nvme format /dev/${CLIENTDISK:0:-2} --ses=2 --namespace-id=1 &>/dev/null
		fi
	else
		echo "remote|${tagNum}|status|fail - secure erase" | /var/lib/UIT-TSS-TOOLBOX/parse
		read -t 10 -p "No compatible SATA or NVME drive is selected. Can't use Secure Erase on ${CLIENTDISK}."
		uit-tss-client
	fi
}



function secUnlock_Shred {
	echo "remote|${tagNum}|status|unlock secure erase" | /var/lib/UIT-TSS-TOOLBOX/parse
	footer
	if [[ $CLIENTDISK =~ $SSD_REGEX ]]; then 
		echo "Unlocking ${CLIENTDISK}, please keep the device powered on...."
		if [[ /dev/${CLIENTDISK} ]]; then
			hdparm --user-master u --security-unlock UHouston /dev/${CLIENTDISK} &>/dev/null
			hdparm --user-master u --security-disable UHouston /dev/${CLIENTDISK} &>/dev/null
		fi
	elif [[ $CLIENTDISK =~ $NVME_REGEX ]]; then
		echo "NVME drives do not need to be unlocked. Continuing...."
	else
		echo "remote|${tagNum}|status|fail - secure unlock" | /var/lib/UIT-TSS-TOOLBOX/parse
		read -t 10 -p "No compatible SATA or NVME drive is selected. Can't unlock ${CLIENTDISK}."
		uit-tss-client
	fi
}



function nistMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BOLD}${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""
	echo "Step [1/2]:"
	PCNTOFSECTOR='20'
	WMODE='random'
	writeDisk_Shred
	
	echo ""
	echo "Step [2/3]:"
	secErase_Shred
	secUnlock_Shred
	
	echo ""
	echo "Step [3/3]:"
	PCNTOFSECTOR='5'
	CHAR='0'
	vrfyDisk_Shred
}



function zeroMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""	
	WMODE='zero'
	CHAR='0'
	if [[ $diskType == "hdd" ]]; then
		echo "Step [1/1]: "
		writeDisk_Shred
		echo ""
		echo "Step [2/2]: "
		vrfyDisk_Shred
	else
		echo "Step [1/2]: "
		writeDisk_Shred
		echo ""
		echo "Step [2/2]: "
		vrfyDisk_Shred
	fi
}



function dodMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""
	echo "Step [1/6]: "
	echo ""
	WMODE='zero'
	PCNTOFSECTOR='100'
	writeDisk_Shred
	
	echo ""
	echo "Step [2/6]: "
	echo ""
	PCNTOFSECTOR='100'
	CHAR='0'
	vrfyDisk_Shred

	echo ""
	echo "Step [3/6]: "
	echo ""
	WMODE='char'
	PCNTOFSECTOR='100'
	CHAR='1'
	writeDisk_Shred
	
	echo ""
	echo "Step [4/6]: "
	echo ""
	PCNTOFSECTOR='100'
	CHAR='1'
	vrfyDisk_Shred

	echo ""
	echo "Step [5/6]: "
	echo ""
	WMODE='randBit_Shred'
	PCNTOFSECTOR='100'
	writeDisk_Shred
	
	echo ""
	echo "Step [6/6]: "
	echo ""
	PCNTOFSECTOR='100'
	CHAR=${RANDBIT}
	vrfyDisk_Shred
}



function rcmpMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""
	echo "Step [1/8]: "
	WMODE='zero'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [2/8]: "
	WMODE='char'
	PCNTOFSECTOR='100'
	CHAR='1'
	writeDisk_Shred

	echo ""
	echo "Step [3/8]: "
	WMODE='zero'
	PCNTOFSECTOR='100'
	writeDisk_Shred
	
	echo ""
	echo "Step [4/8]: "
	WMODE='char'
	PCNTOFSECTOR='100'
	CHAR='1'
	writeDisk_Shred

	echo ""
	echo "Step [5/8]: "
	WMODE='zero'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [6/8]: "
	WMODE='char'
	PCNTOFSECTOR='100'
	CHAR='1'
	writeDisk_Shred

	echo ""
	echo "Step [7/8]: "
	echo ""
	WMODE='randBit_Shred'
	PCNTOFSECTOR='100'
	writeDisk_Shred
	
	echo ""
	echo "Step [8/8]: "
	echo ""
	PCNTOFSECTOR='100'
	CHAR="${RANDBIT}"
	vrfyDisk_Shred
}



function schneierMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""
	echo "Step [1/7]: "
	WMODE='char'
	PCNTOFSECTOR='100'
	CHAR='1'
	writeDisk_Shred

	echo ""
	echo "Step [2/7]: "
	WMODE='zero'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [3/7]: "
	WMODE='rand'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [4/7]: "
	WMODE='rand'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [5/7]: "
	WMODE='rand'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [6/7]: "
	WMODE='rand'
	PCNTOFSECTOR='100'
	writeDisk_Shred

	echo ""
	echo "Step [7/7]: "
	WMODE='rand'
	PCNTOFSECTOR='100'
	writeDisk_Shred
}



function gutmann {
	n='0'
	GUTMANNARRAY=(01010101 10101010 10010010 01001001 00100100 00000000 00010001 00100010)
	GUTMANNARRAY+=(00110011 01000100 01010101 01100110 01110111 10001000 10011001 10101010)
	GUTMANNARRAY+=(10111011 11001100 11011101 11101110 11111111 10010010 01001001 00100100)
	GUTMANNARRAY+=(01101101 10110110 11011011)

	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""	
	while [[ $n -le 35 ]]; do 

		if [[ $n -le 4 ]]; then
			echo "[${n}/35] Writing \"${RANDPATTERN}\" to ${CLIENTDISK}"
			WMODE='randPattern_Shred'
			PCNTOFSECTOR='100'
			writeDisk_Shred
		fi

		if [[ $n -le 31 && $n -gt 4 ]]; then
			WMODE='char'
			PCNTOFSECTOR='100'
			for i in ${GUTMANNARRAY[@]}; do
				RANDNUM=$(shuf -i 1-26 -n 1)
				CHAR=${GUTMANARRAY[$RANDNUM]}
			done
			echo "[${n}/35] Writing pattern ${CHAR} to ${CLIENTDISK}"
			writeDisk_Shred
		fi

		if [[ $n -gt 31 ]]; then
			echo "[${n}/35] Writing \"${RANDPATTERN}\" to ${CLIENTDISK}"
			WMODE='randPattern_Shred'
			PCNTOFSECTOR='100'
			writeDisk_Shred
		fi

	done
}



function verifyMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Verifying disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"

	echo ""
	echo ""
	echo "${BOLD}${GREEN}[1]${RESET} ${BOLD}Full verification (Default)${RESET}
	-Longest, verifies every bit on the disk"

	echo ""
	echo "${BOLD}${GREEN}[2]${RESET} ${BOLD}Moderate verification${RESET}
	-10000 divisions, 75% verified"

	echo ""
	echo "${BOLD}${GREEN}[3]${RESET} ${BOLD}Medium verification${RESET}
	-5000 divisions, 50% verified"

	echo ""
	echo "${BOLD}${GREEN}[4]${RESET} ${BOLD}Fast verification${RESET}
	-2500 divisions, 25% verified"

	echo ""
	echo "${BOLD}${GREEN}[5]${RESET} ${BOLD}Very fast verification${RESET}
	-1000 divisions, 10% verified"

	echo ""
	read -n 1 -p "${BOLD}Please select ${GREEN}[1-5]${RESET}${BOLD}:${RESET} " VRFYSELECT
	echo ""

	case $VRFYSELECT in
	1)
	VRFYMODE='full'
	;;
	2)
	VRFYMODE='moderate'
	;;
	3)
	VRFYMODE='medium'
	;;
	4)
	VRFYMODE='fast'
	;;
	5)
	VRFYMODE='vfast'
	;;
	*)
	echo ""
	echo ""
	echo "${BOLD}Incorrect input selected, please try again${RESET}"
	sleep 0.5
	verifyMode_Shred
	;;
	esac

	echo ""
	read -p "Which character/pattern would you like to verify?: " input
	
	if [[ $VRFYMODE == 'full' ]]; then
		PCNTOFSECTOR='100'
		CHAR="${input}"
	fi

	if [[ $VRFYMODE == 'moderate' ]]; then
		SECTIONS='10000'
		PCNTOFSECTOR='75'
		CHAR="${input}"
	fi

	if [[ $VRFYMODE == 'medium' ]]; then
		SECTIONS='5000'
		PCNTOFSECTOR='50'
		CHAR="${input}"
	fi

	if [[ $VRFYMODE == 'fast' ]]; then
		SECTIONS='2500'
		PCNTOFSECTOR='25'
		CHAR="${input}"
	fi

	if [[ $VRFYMODE == 'vfast' ]]; then
		SECTIONS='1000'
		PCNTOFSECTOR='10'
		CHAR="${input}"
	fi

	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${VRFYMODE}${RESET}${BOLD} verify mode. ${BLUE}${PCNTOFSECTOR}%${RESET}${BOLD} of ${BLUE}${CLIENTDISK}${RESET}${BOLD} is being verified.${RESET}"

	vrfyDisk_Shred
}



function unlockMode_Shred {
	footer
	echo "${BOLD}UIT-TSS-TOOLBOX running in ${BLUE}${RMODE}${RESET}${BOLD}. Erasing disk ${BLUE}${CLIENTDISK}${RESET}${BOLD}.${RESET}"
	
	echo ""
	echo ""
	secUnlock_Shred
}



function clientselect_Clone {
	footer
	echo "${BOLD}Please select a ${BOLD}${BLUE}clone mode${RESET}${BOLD}: "
	echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}Restore${RESET} ${DIM}(server -> client)${RESET}"
	echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}Save${RESET} ${DIM}(client -> server)${RESET}"
	read -n1 -p "${BOLD}Enter [1-2]:${RESET} " cloneMode
	echo ""
	echo ""
	case $cloneMode in
		1)
			cloneMode="restoredisk"
		;;
		2)
			cloneMode="savedisk"
		;;
		*)
			echo "${BOLD}${RED}Error - Invalid input${RESET}"
		;;
	esac

	echo "${BOLD}Select which ${BOLD}${BLUE}image${RESET} you are cloning:${RESET} "
	echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}Tech Commons HP laptops${RESET}"
	echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}Tech Commons Dell laptops${RESET}"
	echo "   ${BOLD}${GREEN}[3]${RESET} ${BOLD}Tech Commons Dell desktops${RESET}"
	echo "   ${BOLD}${GREEN}[4]${RESET} ${BOLD}SHRL Dell desktops${RESET}"
	echo "   ${BOLD}${GREEN}[5]${RESET} ${BOLD}Ubuntu Desktop${RESET}"
	read -n1 -p "${BOLD}Enter [1-5]:${RESET} " CLIENTTYPE
	echo ""
	case $CLIENTTYPE in
	1)
	cloneImgName='TechCommons-HP-Laptops'
	;;
	2)
	cloneImgName='TechCommons-Dell-Laptops'
	;;
	3)
	cloneImgName='TechCommons-Dell-Desktops'
	;;
	4)
	cloneImgName='SHRL-Dell-Desktops'
	;;
	5)
	cloneImgName='Ubuntu-Desktop'
	;;
	*)
	clientselect_Clone
	;;
	esac
}



function execute_Clone {
	echo "remote|${tagNum}|status|cloning ($cloneMode)" | /var/lib/UIT-TSS-TOOLBOX/parse
	rm /tmp/network-usage.txt
	SECONDS=0
	start_time=$SECONDS
	linuxUser="cameron"
	linuxPassword='UHouston!'
	linuxServer="10.0.0.1"
	linuxDNS="mickey.uit"
	umount /home/partimag &>/dev/null
	mkdir -p /home/partimag
	mount -t nfs ${linuxServer}:/home/${linuxPath} /home/partimag
	if [[ $cloneMode == "restoredisk" ]]; then
		footer
		sleep 1
		/usr/sbin/ocs-sr --language en_US.UTF-8 --postaction command --user-mode beginner \
			-k1 --skip-check-restorable-r ${cloneMode} ${cloneImgName} ${CLIENTDISK}
	fi
	if [[ $cloneMode == "savedisk" ]]; then
		footer
		sleep 1
		/usr/sbin/ocs-sr --language en_US.UTF-8 --postaction command --user-mode beginner \
			--skip-enc-ocs-img --skip-fsck-src-part --use-partclone -z0 ${cloneMode} ${cloneImgName} ${CLIENTDISK}
	fi
	cloneElapsed=$(( SECONDS - start_time))
	echo "general|clone_time|${cloneElapsed}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	return
}



function execute_Shred {
	if [[ $APPSELECT == "EC" || $APPSELECT == "E" ]]; then
		SECONDS=0
		start_time=$SECONDS
		if [[ $shredMode == 'nist' ]]; then
			nistMode_Shred
		fi

		if [[ $shredMode == 'zero' ]]; then
			zeroMode_Shred
		fi

		if [[ $shredMode == 'dod' ]]; then
			dodMode_Shred
		fi

		if [[ $shredMode == 'rcmp' ]]; then
			rcmpMode_Shred
		fi
	
		if [[ $shredMode == 'gutmann' ]]; then
			gutmann
		fi
	
		if [[ $shredMode == 'schneier' ]]; then
			schneierMode_Shred
		fi
	
		if [[ $shredMode == 'verify' ]]; then
			verifyMode_Shred
		fi

		if [[ $shredMode == 'unlock' ]]; then
			unlockMode_Shred
		fi
		shredElapsed=$(( SECONDS - start_time ))
		echo "general|erase_time|${shredElapsed}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	fi
	return
}



function execute {
	rm /tmp/cpu-usage.txt
	rm /tmp/network-usage.txt

	if [[ $cloneMode == "savedisk" && ($APPSELECT == "E" || $APPSELECT == "EC") ]]; then
		read -t 10 -p "${BOLD}Cannot erase device and save its image.${RESET}"
		echo "remote|${tagNum}|status|fail - can't erase master" | /var/lib/UIT-TSS-TOOLBOX/parse
		uit-tss-client
	fi

	if [[ $APPSELECT == "EC" ]]; then
		if [[ -z $cloneMode ]]; then
			clientselect_Clone
		fi
		basicEraseMode_Shred
		execute_Shred
		execute_Clone
	elif [[ $APPSELECT == "E" ]]; then
		if [[ -z $shredMode ]]; then
			advEraseMode_Shred
		else
			basicEraseMode_Shred
		fi
		execute_Shred
	elif [[ $APPSELECT == "C" ]]; then
		if [[ -z $cloneMode ]]; then
			clientselect_Clone
		fi
		execute_Clone
	else
		echo "${BOLD}${RED}Error - Invalid application selected.${RESET}"
		sleep 0.5
		uit-tss-client
	fi

}


function totaltime {
	totalElapsed=$(echo $(( (shredElapsed + cloneElapsed) / 60 )))
}


function location {
	footer
	RED=$(tput setaf 1)
	GREEN=$(tput setaf 2)
	BLUE=$(tput setaf 4)
	BOLD=$(tput bold)
	DIM=$(tput dim)
	RESET=$(tput sgr0)

	echo ""
	sql=$(echo "SELECT system_serial AS result FROM locations WHERE tagnumber = '${tagNum}' AND system_serial IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
	echo "The last reported serial number for ${BOLD}${tagNum}${RESET} was: ${BOLD}${sql}${RESET}"
	if [[ $sql == "NULL" ]]; then
		read -p "Please enter the ${BOLD}${GREEN}serial number${RESET}: " serial
	else
		serial="${sql}"
	fi
	sql=$(echo "SELECT location AS result FROM locations WHERE tagnumber = '${tagNum}' AND NOT location = 'Plugged in and booted on laptop table.' AND NOT location = 'Finished work on laptop table.' AND location IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
	sql1=$(echo "SELECT CONVERT(time, DATETIME) AS result FROM locations WHERE tagnumber = '${tagNum}' AND NOT location = 'Plugged in and booted on laptop table.' AND NOT location = 'Finished work on laptop table.' AND location IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
	echo "The last reported location for ${BOLD}${tagNum}${RESET} was: ${BOLD}${sql}${RESET} at ${BOLD}${sql1}${RESET}"
	read -p "Please enter the ${BOLD}${GREEN}location${RESET}: " location
	read -n 1 -p "Please enter the ${BOLD}${GREEN}status${RESET} ${BOLD}${GREEN}[1] ${RESET}${BOLD}Functioning ${BOLD}${GREEN}[2] ${RESET}${BOLD}Broken${RESET}: " status

	if [[ $status == "1" ]]; then
		echo ""
		status="TRUE"
		read -p "Please enter a ${BOLD}${GREEN}note${GREEN}${RESET} (leave blank for no note): " note
	elif [[ $status == "2" ]]; then
		echo ""
		sql=$(echo "SELECT note AS result FROM locations WHERE tagnumber = '${tagNum}' AND note IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
		echo "The last reported issue for ${tagNum} was: ${BOLD}${sql}${RESET}"
		status="FALSE"
		read -p "Please enter the ${BOLD}${GREEN}problem${GREEN}${RESET}: " note
	else
		status=""
		note=""
	fi

	echo "location|custom|${tagNum}|${serial}|${location}|${status}|${note}" | /var/lib/UIT-TSS-TOOLBOX/parse
}


function terminate {
	footer
	totaltime

	diskData

	kill $(ps | grep 'uit-cpu' | awk '{ print $1 }')
	kill $(ps | grep 'uit-network' | awk '{ print $1 }')

	echo "system-stats|cpu|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
	echo "system-stats|network|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

	imgUpdate=$(echo "SELECT time AS result FROM jobstats WHERE clone_master = '1' AND department = 'techComm' ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
	imgUpdate=${imgUpdate::10}

	cloneNumToday=$(echo "SELECT COUNT(tagnumber) AS result FROM jobstats WHERE clone_completed = '1' AND time > '${DATE} 00:00:00.000'" | /var/lib/UIT-TSS-TOOLBOX/select)

	eraseNumToday=$(echo "SELECT COUNT(tagnumber) AS result FROM jobstats WHERE erase_completed = '1' AND time > '${DATE} 00:00:00.000'" | /var/lib/UIT-TSS-TOOLBOX/select)

	clientCloneTotal=$(echo "SELECT COUNT(tagnumber) AS result FROM jobstats WHERE clone_completed = '1' AND tagnumber = '${tagNum}'" | /var/lib/UIT-TSS-TOOLBOX/select)

	jobsToday=$(( cloneNumToday + eraseNumToday ))

	if [[ $APPSELECT == "C" || $APPSELECT == "EC" ]]; then
		if [[ $cloneMode == "restoredisk" ]]; then

			if [[ $cloneMode == "restoredisk" && $APPSELECT == "EC" ]]; then
				terminateAction="Erased and cloned"
			fi

			if [[ $cloneMode == "restoredisk" && $APPSELECT == "C" ]]; then
				terminateAction="Cloned"
			fi

			echo "general|clone_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

			if [[ $APPSELECT == "EC" ]]; then
				echo "general|erase_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
			fi

			terminateMessage=$(echo "Tag#: ${tagNum}"
			echo "MAC: ${etherAddr}"
			echo "Action: ${terminateAction}"
			echo "Total time taken: ${totalElapsed} minutes"
			echo "Server: \"${linuxDNS}\""
			echo "Image: \"${cloneImgName}\""
			echo "Total jobs today: ${jobsToday}"
			)
		fi
		if [[ $cloneMode == "savedisk" ]]; then
			echo "general|clone_master|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

			terminateMessage=$(echo "Tag#: ${tagNum}"
			echo "MAC: ${etherAddr}"
			echo "Action: ${terminateAction}"
			echo "Total time taken: ${totalElapsed} minutes"
			echo "Server: \"${linuxDNS}\""
			echo "Image: \"${cloneImgName}\""
			echo "Total jobs today: ${jobsToday}"
			)
		fi
	fi
	

	if [[ $APPSELECT == "E" ]]; then
		echo "general|erase_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse

		terminateAction="erased"

		terminateMessage=$(echo "Tag#: ${tagNum}"
		echo "MAC: ${etherAddr}"
		echo "Action: ${terminateAction}"
		echo "Total time taken: ${totalElapsed} minutes"
		echo "Total jobs today: ${jobsToday}"
		)		
	fi

	if [[ $mainMenuOpt != 0 ]]; then
		/usr/bin/play /root/oven.mp3 &> /dev/null
	fi
	footer
	echo "${BOLD}Process has finished!${RESET}"
	echo ""
	location
	echo ""
	echo "${terminateMessage}"
	echo ""
	echo ""
	read -p "${BOLD}Process has finished. Press ${GREEN}Enter${RESET}${BOLD} to shutdown...${RESET} "
	poweroff
}


function autodetectClient {
	footer
	if [[ $(echo "${tOneManufacturer}" | grep -i "dell") ]]; then
		systemManufacturer="dell"
		elif [[ $(echo "${tOneManufacturer}" | grep -i "hp") ]]; then
			systemManufacturer="hp"
		elif [[ $(echo "${tOneManufacturer}" | grep -i "hewlett") ]]; then
			systemManufacturer="hp"
		else
			systemManufacturer="unknown"
	fi

	if [[ $(echo "${tThreeType}" | grep -i "notebook") ]]; then
		chassisType="notebook"
		elif [[ $(echo "${tThreeType}" | grep -i "desktop") ]]; then
			chassisType="desktop"
		else
			chassisType="unknown"
	fi

	uit-sql &

	echo ""
	echo ""

	while true; do
		ACTION=""
		CLIENTDISK=""
		cloneMode=""
		cloneImgName=""
		logo
		remote

		unattended="true"

		sql=$(echo "SELECT status AS result FROM remote WHERE tagnumber = '${tagNum}' AND status LIKE 'fail%'" | /var/lib/UIT-TSS-TOOLBOX/select)
		if [[ $sql == "NULL" ]]; then
			echo "remote|${tagNum}|status|waiting for task" | /var/lib/UIT-TSS-TOOLBOX/parse
		fi

		if [[ $task != "NULL" ]]; then
			location=$(echo "SELECT location AS result FROM locations WHERE tagnumber = '${tagNum}' AND NOT location = 'Plugged in and booted on laptop table.' AND NOT location = 'Finished work on laptop table.' AND location IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
			status="0"
			note="Unattended"
			echo "location|custom|${tagNum}|${tOneSerialNumber}|${location}|${status}|${note}" | /var/lib/UIT-TSS-TOOLBOX/parse
			tput cuu1
			tput el
			echo "	${BOLD}Tagnumber ${tagNum} (${tOneSerialNumber}) is scheduled for ${task} in 5 seconds. Press ${BOLD}${GREEN}'q' ${RESET}${BOLD}to exit.${RESET}"
			read -t 5 -N 1 input
			if [[ $input = "q" ]] || [[ $input = "Q" ]]; then
				break
			fi
			remote
			if [[ $task == "data collection" ]]; then
				echo "remote|${tagNum}|status|data collection" | /var/lib/UIT-TSS-TOOLBOX/parse
				hardwareData
				location=$(echo "SELECT location AS result FROM locations WHERE tagnumber = '${tagNum}' AND NOT location = 'Plugged in and booted on laptop table.' AND NOT location = 'Finished work on laptop table.' AND location IS NOT NULL ORDER BY time DESC LIMIT 1" | /var/lib/UIT-TSS-TOOLBOX/select)
				status="0"
				note="Unattended"
				echo "location|custom|${tagNum}|${tOneSerialNumber}|${location}|${status}|${note}" | /var/lib/UIT-TSS-TOOLBOX/parse
			elif [[ $task == "update" ]]; then
				echo "remote|${tagNum}|status|updating" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "remote|${tagNum}|task| " | /var/lib/UIT-TSS-TOOLBOX/parse
				kill $(ps | grep 'uit-cpu' | awk '{ print $1 }')
				kill $(ps | grep 'uit-network' | awk '{ print $1 }')
				kill $(ps | grep 'uit-sql' | awk '{ print $1 }')
				rm /tmp/network-usage.txt
				rm /tmp/cpu-usage.txt
				scp -r cameron@mickey.uit:/home/cameron/uit-tss-client_2.0-1_amd64 /root &>/dev/null
				chmod 755 /root/uit-tss-client_2.0-1_amd64/DEBIAN/control
				chmod 755 /root/uit-tss-client_2.0-1_amd64/DEBIAN/postinst
				dpkg-deb --build --root-owner-group /root/uit-tss-client_2.0-1_amd64 &>/dev/null
				dpkg --install /root/uit-tss-client_2.0-1_amd64.deb &>/dev/null
				exec uit-tss-client
			elif [[ $task == "findmy" ]]; then
				echo "remote|${tagNum}|status|playing sound" | /var/lib/UIT-TSS-TOOLBOX/parse
				play /root/findmy1.mp3 &> /dev/null
			elif [[ $task == "hpEraseAndClone" ]]; then
				echo "remote|${tagNum}|status|Starting $task" | /var/lib/UIT-TSS-TOOLBOX/parse
				APPSELECT="EC"
				ACTION="erase and clone"
				if [[ /dev/nvme0n1 ]]; then
					CLIENTDISK='nvme0n1'
				else
					echo "remote|${tagNum}|status|fail - disk doesn't exist" | /var/lib/UIT-TSS-TOOLBOX/parse
					autodetectClient
				fi
					echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				cloneMode="restoredisk"
				cloneImgName="TechCommons-HP-Laptops"
				shredMode="autodetect"
				RMODE="autodetect"
					echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				linuxUser="cameron"
				linuxPassword="UHouston!"
				linuxServer="10.0.0.1"
				linuxDNS="mickey.uit"
				footer
				rtcwake --mode mem --seconds 3
				footer
				execute
				totaltime
				kill $(ps | grep 'uit-cpu' | awk '{ print $1 }')
				kill $(ps | grep 'uit-network' | awk '{ print $1 }')
				kill $(ps | grep 'uit-sql' | awk '{ print $1 }')
				echo "general|clone_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "general|erase_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "system-stats|cpu|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "system-stats|network|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
			elif [[ $task = "nvmeErase" ]]; then
				echo "remote|${tagNum}|status|Starting $task" | /var/lib/UIT-TSS-TOOLBOX/parse
				APPSELECT="E"
				ACTION="erase"
				if [[ /dev/nvme0n1 ]]; then
					CLIENTDISK='nvme0n1'
				else
					echo "remote|${tagNum}|status|fail - disk doesn't exist" | /var/lib/UIT-TSS-TOOLBOX/parse
					autodetectClient
				fi
					echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				shredMode="autodetect"
				RMODE="autodetect"
					echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				footer
				rtcwake --mode mem --seconds 3
				footer
				execute
				totaltime
				kill $(ps | grep 'uit-cpu' | awk '{ print $1 }')
				kill $(ps | grep 'uit-network' | awk '{ print $1 }')
				kill $(ps | grep 'uit-sql' | awk '{ print $1 }')
				echo "general|clone_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "general|erase_completed|1|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "system-stats|cpu|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
				echo "system-stats|network|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
			fi
			echo "remote|${tagNum}|task| " | /var/lib/UIT-TSS-TOOLBOX/parse
		else
			tput cuu1
			tput el
			echo "	${BOLD}Tagnumber ${tagNum} (${tOneSerialNumber}) has no scheduled tasks right now. Press ${BOLD}${GREEN}'q' ${RESET}${BOLD}to continue.${RESET}"
			read -t 10 -N 1 input
			if [[ $input = "q" ]] || [[ $input = "Q" ]]; then
				break
			fi
		fi
	done

	unattended="false"
	logo
	echo "${BOLD}${BLUE}Autodetect mode${RESET}${BOLD} will destroy all data on this laptop and image it."
	echo ""
	echo "------------------------------"
	echo "${BOLD}Select mode:${RESET}"
	echo "   ${BOLD}${GREEN}[1]${RESET} ${BOLD}Autodetect${RESET}"
	echo "   ${BOLD}${GREEN}[2]${RESET} ${BOLD}Manual${RESET}"
	read -n 1 -p "${BOLD}Enter [1,2]:${RESET} " input

	if [[ $input == "1" ]]; then
		if [[ $systemManufacturer == "hp" && $chassisType == "notebook" && $diskType == "nvme" ]]; then
			mainMenuOpt="1"
		elif [[ $systemManufacturer == "dell" && $chassisType == "notebook" && $diskType == "nvme" ]]; then
			mainMenuOpt="2"
		else
			echo ""
			echo "${BOLD}${RED}Not enough info for autodetect.${RESET}"
			sleep 0.5
			manualClient
		fi
		echo ""
		echo "------------------------------"
		echo "${BOLD}Is this information corect?${RESET}"
		echo ""
		echo "${BOLD}${BLUE}System Manufacturer${RESET}${BOLD}: ${systemManufacturer}${RESET}"
		echo "${BOLD}${BLUE}Chassis Type${RESET}${BOLD}: ${chassisType}${RESET}"
		echo "${BOLD}${BLUE}Disk type${RESET}${BOLD}: ${DISK}${RESET}"
		echo ""
		echo "${BOLD}${GREEN}[1]${RESET} ${BOLD}Yes, it is correct${RESET}"
		echo "${BOLD}${GREEN}[2]${RESET} ${BOLD}No, start over${RESET}"
		read -n 1 -p "${BOLD}Please enter [1,2]:${RESET} " input
		if [[ $input == "1" ]]; then
				return
			else
				autodetectClient
		fi
		else
			manualClient
	fi
}


function main {
	tput reset
	department
	enterTag
	hardwareData
	tput reset
	autodetectClient
	if [[ $mainMenuOpt == "1" ]]; then
		APPSELECT="EC"
		ACTION="erase and clone"
		if [[ /dev/nvme0n1 ]]; then
			CLIENTDISK='nvme0n1'
		else
			diskSelect
		fi
			echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		cloneMode="restoredisk"
		cloneImgName="TechCommons-HP-Laptops"
		shredMode="autodetect"
		RMODE="autodetect"
			echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		linuxUser="cameron"
		linuxPassword="UHouston!"
		linuxServer="10.0.0.1"
		linuxDNS="mickey.uit"
		powerWarning
		execute
	elif [[ $mainMenuOpt == "2" ]]; then
		APPSELECT="EC"
		ACTION="erase and clone"
		if [[ /dev/nvme0n1 ]]; then
			CLIENTDISK='nvme0n1'
		else
			diskSelect
		fi
			echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		cloneMode="restoredisk"
		cloneImgName="TechCommons-Dell-Laptops"
		shredMode="autodetect"
		RMODE="autodetect"
			echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		linuxUser="cameron"
		linuxPassword="UHouston!"
		linuxServer="10.0.0.1"
		linuxDNS="mickey.uit"
		powerWarning
		execute
	elif [[ $mainMenuOpt == "3" ]]; then
		APPSELECT="E"
		ACTION="erase"
		diskSelect
			echo "general|disk|${CLIENTDISK}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		shredMode="autodetect"
		RMODE="autodetect"
			echo "general|erase_mode|${RMODE}|${UUID}" | /var/lib/UIT-TSS-TOOLBOX/parse
		powerWarning
		execute
	elif [[ $mainMenuOpt == "9" ]]; then
		appSelect
		if [[ $APPSELECT != "battery" ]]; then
			diskSelect
			execute
		else
			monitorBattery
		fi
	elif [[ $mainMenuOpt == "0" ]]; then
		:
	else
		uit-tss-client
	fi
	if [[ $unattended == "false" ]]; then
		terminate
	fi
}

main
