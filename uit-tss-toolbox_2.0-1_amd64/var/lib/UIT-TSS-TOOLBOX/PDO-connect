<?php
$user = "laptops";
$pass = "UHouston!";
try {
    $pdo = new PDO('mysql:host=10.10.0.1;dbname=laptopDB', $user, $pass, array(
        PDO::ATTR_PERSISTENT => true,
        PDO::ATTR_ERRMODE => true,
        PDO::ERRMODE_EXCEPTION => true
    ));
} catch (PDOException $e) {
    echo "Failed to connect to DB :(";
}

?>